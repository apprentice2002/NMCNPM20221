            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <TableView fx:id="table" layoutX="30.0" layoutY="208.0" prefHeight="400.0" prefWidth="720.0" style="-fx-border-color: #00305b; -fx-border-radius: 12; -fx-background-color: #fefefe; -fx-background-radius: 12;">
            <columns>
                <TableColumn fx:id="idMinhChungCol" prefWidth="60" style="-fx-border-radius: 12; -fx-background-radius: 12;" text="ID" />
                <TableColumn fx:id="hoTenCol" prefWidth="120.0" style="-fx-border-radius: 12; -fx-background-radius: 12;" text="Họ Tên" />
